      </Button>
      <PasswordField fx:id="new_pass" layoutX="225.0" layoutY="190.0" prefHeight="47.0" prefWidth="403.0" promptText="*********">
         <font>
            <Font size="14.0" />
         </font>
      </PasswordField>
